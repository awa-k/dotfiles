"" backup, etc
set backupdir=~/.vim-backup
set undodir=~/.vim-backup
set nowritebackup
set nobackup
set noswapfile

"" layout
set ambiwidth=double
set colorcolumn=80

"" view
set list
set listchars=eol:↲,tab:»-,trail:-,extends:»,precedes:«,nbsp:%
set matchpairs+=<:>
set matchtime=5

let g:airline_powerline_fonts = 1

